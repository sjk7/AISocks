{
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/build/${buildType}",
    "cmake.ctestDirectory": "${workspaceFolder}/build/${buildType}",
    "cmake.ctestPath": "/opt/homebrew/bin/ctest",
    "cmake.generator": "Ninja",
    "cmake.configureSettings": {
        "BUILD_TESTS": "ON",
        "BUILD_EXAMPLES": "ON"
    },
    "cmake.buildBeforeRun": true,
    "cmake.debugConfig": {
        "type": "cppvsdbg"
    },
    "files.associations": {
        "*.h": "cpp",
        "*.cpp": "cpp"
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "[cpp]": {
        "editor.inlayHints.enabled": "offUnlessPressed"
    },
    "chat.tools.terminal.autoApprove": {
        "git check-ignore": true,
        "/^\\./tests/test_new_features 2>&1 \\| grep -A4 \"throughput\\\\\\|time:\"$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cd /Users/stevekerr/Documents/AISocks/build-release && \\./tests/test_new_features 2>&1 \\| grep -A5 \"bulk throughput\"$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^\\./tests/test_new_features 2>&1 \\| grep -A6 \"bulk throughput\"$/": {
            "approve": true,
            "matchCommandLine": true
        }
    }
}