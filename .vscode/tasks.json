{
    "version": "2.0.0",
    "tasks": [
        // -----------------------------------------------------------------------
        // Configure
        // -----------------------------------------------------------------------
        {
            "label": "cmake: configure (debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build/debug",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DBUILD_TESTS=ON",
                "-DBUILD_EXAMPLES=ON"
            ],
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        {
            "label": "cmake: configure (release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build/release",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_TESTS=ON",
                "-DBUILD_EXAMPLES=ON"
            ],
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        // -----------------------------------------------------------------------
        // Build
        // -----------------------------------------------------------------------
        {
            "label": "cmake: build (debug)",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/debug" ],
            "group": { "kind": "build", "isDefault": true },
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "cmake: build (release)",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/release" ],
            "group": "build",
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": "$msCompile"
        },
        // -----------------------------------------------------------------------
        // Clean
        // -----------------------------------------------------------------------
        {
            "label": "cmake: clean (debug)",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/debug", "--target", "clean" ],
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        {
            "label": "cmake: clean (release)",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/release", "--target", "clean" ],
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        // -----------------------------------------------------------------------
        // Tests
        // -----------------------------------------------------------------------
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build/debug",
                "--target", "test_socket_basics",
                "--target", "test_ip_utils",
                "--target", "test_blocking",
                "--target", "test_move_semantics",
                "--target", "test_loopback_tcp",
                "--target", "test_error_handling",
                "--target", "test_construction",
                "--target", "test_new_features",
                "--target", "test_error_messages",
                "--target", "test_poller",
                "--target", "test_tcp_socket",
                "--target", "test_server_base"
            ],
            "group": { "kind": "test", "isDefault": false },
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/debug", "--target", "run_all_tests" ],
            "group": { "kind": "test", "isDefault": true },
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": [],
            "dependsOn": [ "Build Tests" ]
        },
        {
            "label": "Build test_new_features",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/debug", "--target", "test_new_features" ],
            "group": "build",
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run test_new_features",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/tests/test_new_features.exe",
            "args": [],
            "group": "test",
            "presentation": { "reveal": "always", "panel": "dedicated", "focus": true },
            "problemMatcher": [],
            "dependsOn": [ "Build test_new_features" ]
        },
        // -----------------------------------------------------------------------
        // Misc targets
        // -----------------------------------------------------------------------
        {
            "label": "Build aiSocksGoogleClient",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/debug", "--target", "aiSocksGoogleClient" ],
            "group": "build",
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build aiSocksHttpServer (debug)",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/debug", "--target", "aiSocksHttpServer" ],
            "group": "build",
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build aiSocksHttpServer (release)",
            "type": "shell",
            "command": "cmake",
            "args": [ "--build", "${workspaceFolder}/build/release", "--target", "aiSocksHttpServer" ],
            "group": "build",
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": "$msCompile"
        }
    ]
}