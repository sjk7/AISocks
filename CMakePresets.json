{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "toolset": {
        "value": "host",
        "strategy": "external"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "msan-debug",
      "inherits": "base",
      "displayName": "MemorySanitizer Debug",
      "binaryDir": "${sourceDir}/build-msan",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_EXAMPLES": "ON",
        "ENABLE_MSAN": "ON"
      }
    },
    {
      "name": "asan-debug",
      "inherits": "base", 
      "displayName": "AddressSanitizer Debug",
      "binaryDir": "${sourceDir}/build-asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_EXAMPLES": "ON",
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "ubsan-release",
      "inherits": "base",
      "displayName": "UBSan RelWithDebInfo",
      "binaryDir": "${sourceDir}/build-ubsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "BUILD_EXAMPLES": "ON",
        "ENABLE_UBSAN": "ON"
      }
    },
    {
      "name": "mac-release",
      "inherits": "base",
      "displayName": "macOS Release -O3 with symbols",
      "binaryDir": "${sourceDir}/build-mac-rel",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_EXAMPLES": "ON",
        "CMAKE_CXX_FLAGS_RELEASE": "-O2 -DNDEBUG -fno-exceptions"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "Build Debug"
    },
    {
      "name": "http-server-debug",
      "configurePreset": "debug",
      "displayName": "Build http_server (Debug)",
      "targets": ["http_server"]
    },
    {
      "name": "msan-debug",
      "configurePreset": "msan-debug", 
      "displayName": "Build MemorySanitizer Debug"
    },
    {
      "name": "http-server-msan",
      "configurePreset": "msan-debug",
      "displayName": "Build http_server (MemorySanitizer)",
      "targets": ["http_server"]
    },
    {
      "name": "asan-debug",
      "configurePreset": "asan-debug",
      "displayName": "Build AddressSanitizer Debug"
    },
    {
      "name": "http-server-asan",
      "configurePreset": "asan-debug",
      "displayName": "Build http_server (AddressSanitizer)",
      "targets": ["http_server"]
    },
    {
      "name": "ubsan-release",
      "configurePreset": "ubsan-release",
      "displayName": "Build UBSan RelWithDebInfo"
    },
    {
      "name": "http-server-ubsan",
      "configurePreset": "ubsan-release",
      "displayName": "Build http_server (UBSan RelWithDebInfo)",
      "targets": ["http_server"]
    },
    {
      "name": "mac-release",
      "configurePreset": "mac-release",
      "displayName": "Build macOS Release -O3"
    },
    {
      "name": "http-server-mac-rel",
      "configurePreset": "mac-release",
      "displayName": "Build http_server (macOS Release -O3)",
      "targets": ["http_server"]
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "Run Tests (Debug)"
    }
  ]
}
